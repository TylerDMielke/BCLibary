@page
@model BCLibraryWebApp.Pages.Identity.SignupModel
@{
}
<h1>Sign Up</h1>

<div>
    @Model.Message
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="EmailAddress" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="EmailAddress" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="UserName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary btn-sm">Sign Up</button>
    </div>
</form>
